root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{cs,csproj,sln}]
charset = utf-8-bom

[*.sln]
indent_style = tab

[*.{css,scss}]
indent_size = 2

[*.{js,json,jsx,ts,tsx}]
indent_size = 2

[*.{graphql}]
indent_size = 2

[*.{htm,html,xhtml,xml}]
indent_size = 2
